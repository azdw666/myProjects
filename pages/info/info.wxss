.num-item{
  border: 1rpx solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 15rpx;
  
  text-shadow: 0rpx 0rpx 5rpx #fff;
  box-shadow: 1rpx 1rpx 6rpx #aaaaaa;
  height: 200rpx;
}
.shop-item{
  display: flex;
  padding: 15rpx;
  border: 1rpx solid #efefef;
  margin: 15rpx;
  border-radius: 8rpx;
  box-shadow: 1rpx 1rpx 15rpx #ddd;
}
.thumb image{
  height: 250rpx;
  width: 250rpx;
  display: block;
  margin-right: 15rpx;
}
.info{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
}
.info .shop-title{
  font-weight: bold;
}