@import "/Common/common.wxss";
.container1{
  height: 120px;

}
.container1 view{
  width: 100px;
  height: 100px;
  margin-left: 20rpx;
  align-items: center;
  text-align: center;
  line-height: 100px;
  font-size: 20px;
}
.container1 view:nth-child(1){
  background-color: red;
}
.container1 view:nth-child(2){
  background-color: green;
}
.container1 view:nth-child(3){
  background-color: blue;
}
