<!-- 轮播图 -->
<swiper class="swiper_box" circular="true" 	vertical="true" autoplay="true" interval="3000" indicator-dots="true">
  <swiper-item wx:for="{{swiperlist}}" wx:key="index">
    <image src="{{item.image}}"></image>
  </swiper-item>
</swiper>

<!-- 九宫格 -->
<view class="grid_box">
  <navigator url="/pages/info/info?name={{item.name}}&id={{item.id}}" class="grid_item" wx:for="{{gridList}}" wx:key="item.id">
    <image src="{{item.icon}}"></image>
    <text>{{item.name}}</text>
  </navigator>
</view>

<view class="footer">
  <view class="footer_item1" bindtap="handelAdd">
      商家推荐   
  </view>
  <view class="footer_item2">
      交友论坛
  </view>
</view>
