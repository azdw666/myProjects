/* pages/living/living.wxss */
.swiper_box{
  height: 350rpx;
}
.swiper_box image{
  width:100% ;
  height: 100%;
}
.grid_box{
  display: flex;
  flex-wrap: wrap;
}
.grid_item{
  border-right:1rpx solid #efefef ;
  border-bottom:1rpx solid #efefef ;
  width:33.33%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;/*边框盒子*/
}
.grid_item image{
  height: 60rpx;
  width: 60rpx;
}
.grid_item text{
  font-size: 24rpx;
  margin-top: 10rpx;
}

.footer{
  display: flex;
}
.footer view{
  color: white;
  border-radius: 15rpx;
  width: 50%;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx 10rpx;
}
.footer .footer_item1{
  
  background-color:deeppink ;
  
}
.footer .footer_item2{
  background-color:deepskyblue ;
}